<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_colour"
    android:fitsSystemWindows="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/secondary_colour"
        android:paddingBottom="24dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"

            android:background="#FFD400"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_marginTop="25dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/back"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About the Developer"
                android:layout_marginTop="25dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="-55dp"
            android:layout_gravity="center"
            android:background="@drawable/profile_image_bg"
            android:padding="4dp"
            android:scaleType="centerCrop"
             />

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Kunaljit Kashyap"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Role -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="Android Developer | Engineering Student | Photographer"
            android:textSize="15sp"
            android:textColor="#666666" />

        <!-- Divider -->
        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@color/secondary_colour" />

        <!-- About Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="I am a passionate Android developer focused on building clean, user-friendly applications that solve real-world problems. I enjoy learning new technologies and creating meaningful digital experiences."
                android:textSize="14sp"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp" />
        </androidx.cardview.widget.CardView>

        <!-- Social Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ivGithub"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/icon_bg"
                android:padding="10dp"
                android:src="@drawable/github" />

            <ImageView
                android:id="@+id/ivLinkedIn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/icon_bg"
                android:padding="10dp"
                android:src="@drawable/link" />

            <ImageView
                android:id="@+id/ivGmail"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/icon_bg"
                android:padding="10dp"
                android:src="@drawable/gmail" />


        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Made with ❤️ for kuhi"
            android:textSize="12sp"
            android:textColor="#888888" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="App Version v1.2.3"
            android:textSize="11sp"
            android:textColor="#AAAAAA" />

    </LinearLayout>

</ScrollView>
